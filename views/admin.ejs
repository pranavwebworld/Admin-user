<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title>Welcome Admin</title>
    



    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js" ></script>
  </head>
  <body >


    <header>

        <nav class="navbar navbar-light bg-light justify-content-between">
            <a class="navbar-brand">Admin Panel</a>
           
            <form class="" action="/admin/search" method="post">
              <input style=" border: 2px solid rgb(58, 194, 92);
              border-radius: 4px; margin-left: 325px;" class=" me-2" id="searchUser" type="text" placeholder="Search User" aria-label="Search" name="seachuser">
              <button style="    margin-right: -300px;
              margin-left: 8px;" class="btn btn-outline-success"  type="submit">Search</button>
            </form>

              <form class="tble text-white " action="/admin/logout" method="post">

                <button type="s  id="btn" name="table" class="btn btn-success">Admin logout</button>
          
                </form>
               
                       

    </header>

  


    <h1 style="margin-left: 37%;"  class="text-info">User Details</h1>


    <section>

      <div class="container">
        
        
          <table  id="table"  class="table table-dark" >
              <thead>
                <tr>
                  <th scope="col">no</th>
                  <th scope="col">User</th>
                  <th scope="col">Password</th>
                  <th scope="col">Options</th>
               
                </tr>
              </thead>
              <tbody>



              <%for (var i=0; i < indata.length ; i++){%>
                <tr>
                  <td scope="row"><%=i+1%></td>
                  <td><%=indata[i].email%></td>
                  <td><%=indata[i].pass%></td>
                  <td><a href="/admin/userdelete/<%=indata[i]._id%>"> <i   style=" color: aquamarine; padding: 2px;" class="fas fa-user-minus" onclick=" return confirm('Are you sure')" > </i> </a> <a href="/admin/editUser/<%=indata[i]._id%>"> <i  style="color: aquamarine;" class="fas fa-user-edit"></i></a> 
                

                      <a style="color: aquamarine;" href="/admin/blockuser/<%=indata[i]._id%>"><%=indata[i].isActive%>"</a>
              
                  </a>
                    </td>
                </tr>

                
                <%}%> 
               
                
              </tbody>

             
            </table>
      

            
            <form class="form-inline" action="/admin/add" method="post">
              <div class="form-group mb-2">
               
                <input name="email" type="email" placeholder=" email" class="form-control" id="staticEmail2" >
              </div>
              <div class="form-group mx-sm-3 mb-2">
              
                <input name="pass" type="password" class="form-control" id="inputPassword2" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary mb-2"> <i class="fas fa-user-plus"> </i> </button>
            </form>


      </div>
      
      </section>


    
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>



</html>