<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">


    <h1 style="color: aliceblue; padding-left: 36%; "><span></span> Edit user</h1>


    <!-- Sign up FORM -->
    <form style="color: aliceblue; " action="/admin/editUser/<%=editUser._id%>" method="post">
        <div class="form-group">

            <label>Email</label>

            <input type="email" class="form-control" name="email" required value="<%=editUser.email%>">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="pass" required value="<%=editUser.pass%>"  >
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Change</button>
    </form>

    <hr>

 

  

</div>
</div>
